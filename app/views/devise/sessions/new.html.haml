

.container
	.row
		.col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
			.row
				.col-xs-12.col-lg-10.col-lg-offset-1
					.well
						%h4.text-center Login
						= form_for resource, as: resource_name, url: session_path( resource_name ), role: :form do |f|
							-# pass along dest if we got one
							- if params[:dest].present?
								= hidden_field_tag :dest, params[:dest]
							.form-group
								= f.label :login, 'Email'
								= f.text_field :login, autofocus: true, placeholder: "email", class: 'form-control'

							.form-group
								= f.label :password, 'Password'
								= f.password_field :password, placeholder: "password", class: 'form-control'

							.form-group.text-center
								= f.submit 'Sign In', class: 'btn btn-default'

							.text-center.row{ style: 'margin: 0;font-size: 12px;' }
								%a.pull-left#login-forget-link{ href: "/forgot" } Forgot Password?
								%a.pull-right#login-register-link{ href: "/register" } Register
