

.container
	.row
		.col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
			.row
				.col-xs-12.col-lg-10.col-lg-offset-1
					.well
						%h4.text-center Registration
						= form_for resource, as: resource_name, url: registration_path( resource_name ), role: :form do |f|
							.form-group
								= f.label :full_name, 'Name'
								= f.text_field :full_name, autofocus: true, placeholder: "name", class: 'form-control'

							.form-group
								= f.label :email, 'Email'
								= f.text_field :email, autofocus: true, placeholder: "email", class: 'form-control'

							.form-group
								= f.label :password, 'Password'
								= f.password_field :password, placeholder: "password", class: 'form-control'

							.form-group
								= f.label :password_confirmation, 'Confirm Password'
								= f.password_field :password_confirmation, placeholder: "confirm password", class: 'form-control'

							.form-group.text-center
								= f.submit 'Sign Up', class: 'btn btn-default'

							.text-center.row{ style: 'margin: 0;font-size: 12px;' }
								%a.pull-left#login-forget-link{ href: "/forgot" } Forgot Password?
								%a.pull-right#login-link{ href: "/login" } Login
