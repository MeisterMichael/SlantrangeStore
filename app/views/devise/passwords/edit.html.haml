


.container
	.row
		.col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
			.row
				.col-xs-12.col-lg-10.col-lg-offset-1
					.well
						%h4.text-center Reset Password
						= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
							= f.hidden_field :reset_password_token
							.form-group
								= f.label :login, 'New Password'
								= f.password_field :password, autocomplete: 'off', class: 'form-control'
							.form-group
								= f.label :login, 'Confirm New Password'
								= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'

							.form-group.text-center
								= f.submit 'Change my Password', class: 'btn btn-default'
