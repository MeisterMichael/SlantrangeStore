

.container
	.row
		.col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
			.row
				.col-xs-12.col-lg-10.col-lg-offset-1
					.well
						%h4.text-center Reset Password
						= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', class: 'form'}) do |f|
							.form-group
								= f.label :email, 'Email'
								= f.text_field :email, autofocus: true, placeholder: "email", class: 'form-control'

							.form-group.text-center
								= f.submit 'Reset Password', class: 'btn btn-default'

							.text-center.row{ style: 'margin: 0;font-size: 12px;' }
								%a.pull-left#login-link{ href: "/login" } Login
								%a.pull-right#login-register-link{ href: "/register" } Register
